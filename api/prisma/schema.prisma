generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum UserRole {
  admin
  technical
  customer
}

enum Service {
  backup
  virus
  software
  internet
  printer
  peripherals
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  role UserRole @default(customer)

  calleds Calleds[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("users")
}

model Calleds {
  id        String  @id @default(uuid())
  name      String
  service   Service
  amount    Float
  technical String
  filename  String

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("calleds")
}
